{
    "name": "@iefa/api",
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "start": "bun src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "test": "bun test",
        "format": "biome format",
        "lint": "biome lint",
        "check": "biome check",
        "typecheck": "tsgo --noEmit",
        "validate-env": "bun run -e \"import('@repo/env').then(m => m.validateApiEnv())\""
    },
    "dependencies": {
        "@hono/zod-openapi": "^1.2.1",
        "@hono/zod-validator": "^0.7.6",
        "@scalar/hono-api-reference": "^0.9.30",
        "@scalar/openapi-to-markdown": "^0.3.12",
        "@supabase/supabase-js": "^2.89.0",
        "@typescript/native-preview": "^7.0.0-dev.20260202.1",
        "hono": "^4.11.4",
        "zod": "^4.3.6",
        "@repo/env": "workspace:*"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "bun-types": "^1.3.6",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
