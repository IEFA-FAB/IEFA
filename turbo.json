{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "validate-env": {
      "cache": false,
      "inputs": ["$VITE_*", "$API_*"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "dist/**", "build/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "vite.config.*",
        "app.config.*",
        "vinxi.config.*"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
